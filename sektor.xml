            </logic>
        </roleRef>
        <event type="finish">
            <id>1</id>
            <actions phase="post">
                <action>
                    goodsList: f.goodsList,
                    goodsName: f.goodsName;

                    change goodsList choices{
                        return goodsList.choices - [(goodsName.value as String)];
                    }

                </action>
            </actions>
        </event>
    </transition>
